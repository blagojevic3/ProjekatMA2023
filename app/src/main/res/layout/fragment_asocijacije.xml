<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AsocijacijeFragment"
    android:background="@drawable/games_bkg">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/linearAB1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/a1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="A1"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="10dp"
 />

        <Button
            android:id="@+id/b1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="B1"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearAB2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        app:layout_constraintTop_toBottomOf="@id/linearAB1">

        <Button
            android:id="@+id/a2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="A2"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="30dp"/>

        <Button
            android:id="@+id/b2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="B2"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearAB3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        app:layout_constraintTop_toBottomOf="@id/linearAB2">

        <Button
            android:id="@+id/a3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="A3"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="40dp"/>

        <Button
            android:id="@+id/b3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="B3"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="40dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearAB4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="190dp"
        app:layout_constraintTop_toBottomOf="@id/linearAB3">

        <Button
            android:id="@+id/a4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="A4"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="4dp"/>

        <Button
            android:id="@+id/b4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="B4"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="50dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearResenjeAB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        app:layout_constraintTop_toBottomOf="@id/linearAB4">

        <EditText
            android:id="@+id/konacnoA"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:hint="Rješenje A"
            android:textColorHint="@color/oxford_blue_opacity"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="4dp"
            android:background="@color/purple_500" />

        <EditText
            android:id="@+id/konacnoB"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:hint="Rješenje B"
            android:textColorHint="@color/oxford_blue_opacity"
            android:background="@color/purple_500"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="50dp"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/solutionRowLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        app:layout_constraintTop_toBottomOf="@id/linearResenjeAB">

        <EditText
            android:id="@+id/konacnoSve"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="40dp"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:background="@color/purple_500"
            android:hint="Konačno"
            android:textColorHint="@color/oxford_blue_opacity"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearResenjeCD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="360dp">

        <EditText
            android:id="@+id/konacnoC"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:hint="Rješenje C"
            android:textColorHint="@color/oxford_blue_opacity"
            android:background="@color/purple_500"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/buttonResenjeD"/>

        <EditText
            android:id="@+id/konacnoD"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:hint="Rješenje D"
            android:textColorHint="@color/oxford_blue_opacity"
            android:background="@color/purple_500"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="50dp"
            app:layout_constraintStart_toEndOf="@+id/buttonResenjeC"
            app:layout_constraintEnd_toEndOf="parent"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearCD4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="410dp">

        <Button
            android:id="@+id/c4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="C4"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/buttonD4"/>

        <Button
            android:id="@+id/d4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="D4"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="50dp"
            app:layout_constraintStart_toEndOf="@+id/buttonC4"
            app:layout_constraintEnd_toEndOf="parent"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearCD3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="460dp">

        <Button
            android:id="@+id/c3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="C3"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/buttonD3"/>

        <Button
            android:id="@+id/d3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="D3"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="40dp"
            app:layout_constraintStart_toEndOf="@+id/buttonC3"
            app:layout_constraintEnd_toEndOf="parent"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearCD2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="510dp">

        <Button
            android:id="@+id/c2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="C2"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="30dp"/>

        <Button
            android:id="@+id/d2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="D2"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearCD1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="560dp">

        <Button
            android:id="@+id/c1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="C1"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="10dp"/>

        <Button
            android:id="@+id/d1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="D1"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="10dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="630dp"
        android:orientation="vertical">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="potvrdi"
            android:layout_gravity="center"
            android:id="@+id/potvrdiBtn"/>



    </LinearLayout>

</RelativeLayout>